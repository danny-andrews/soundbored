{
  // Function rules
  "requireFunctionDeclarations": true,
  "requireAnonymousFunctions": {"allExcept": ["declarations"]},
  "disallowSpacesInFunction": {
    "beforeOpeningRoundBrace": true
  },
  "requireSpacesInFunction": {
    "beforeOpeningCurlyBrace": true
  },
  "validateAlignedFunctionParameters": true,
  // Comments
  "requireCapitalizedComments": true,
  "requireSpaceAfterLineComment": true,
  // New lines
  "disallowPaddingNewlinesInBlocks": true,
  "requireCommaBeforeLineBreak": true,
  "requireKeywordsOnNewLine": ["else"],
  // Spacing
  "disallowMixedSpacesAndTabs": true,
  "disallowMultipleSpaces": true,
  "disallowMultipleLineBreaks": true,
  "requireSpaceBeforeBinaryOperators": true,
  "requireSpaceAfterBinaryOperators": true,
  "disallowSpaceBeforeComma": true,
  "requireSpaceAfterComma": {"allExcept": ["trailing"]},
  "requireSpaceAfterKeywords": [
    "do",
    "else",
    "case",
    "try",
    "void",
    "return",
    "typeof"
  ],
  "disallowSpaceAfterKeywords": [
    "if",
    "for",
    "while",
    "do",
    "switch"
  ],
  "requireSpaceBeforeObjectValues": true,
  "disallowSpaceAfterObjectKeys": true,
  "disallowSpaceBeforePostfixUnaryOperators": true,
  "disallowSpaceAfterPrefixUnaryOperators": true,
  "requireSpaceBeforeBlockStatements": true,
  "disallowSpaceBeforeSemicolon": true,
  "disallowSpacesInCallExpression": true,
  "requireSpacesInConditionalExpression": true,
  "requireSpacesInForStatement": true,
  "disallowSpacesInsideBrackets": true,
  "disallowSpacesInsideObjectBrackets": true,
  "disallowSpacesInsideParentheses": true,
  "disallowTrailingWhitespace": true,
  "disallowTabs": true,
  "requireLineFeedAtFileEnd": true,
  // Naming
  "requireCamelCaseOrUpperCaseIdentifiers": {
    "ignoreProperties": true
  },
  // Object Literals
  "requireObjectKeysOnNewLine": true,
  "requireObjectKeysOnNewLine": {
    "allExcept": ["sameLine"]
  },
  "disallowQuotedKeysInObjects": true,
  "requireDotNotation": true,
  "disallowTrailingComma": true,
  // ES6 Features
  "requireShorthandArrowFunctions": true,
  "disallowParenthesesAroundArrowParam": true,
  "disallowIdenticalDestructuringNames": true,
  "requireSpread": true,
  "requireNumericLiterals": true,
  "requireTemplateStrings": {"allExcept": ["stringConcatenation"]},
  "requireEnhancedObjectLiterals": true,
  // Quotes, Semicolons, Braces, IIFE
  "requireSemicolons": true,
  "validateQuoteMarks": {"mark": "'", "escape": true},
  "requireCurlyBraces": [
    "if",
    "else",
    "for",
    "while",
    "do",
    "try",
    "catch",
    "switch"
  ],
  "disallowCurlyBraces": ["case", "default"],
  "requireParenthesesAroundIIFE": true,
  // Validation
  "validateIndentation": 2,
  "validateLineBreaks": {"character": "LF", "reportOncePerFile": true},
  "validateNewlineAfterArrayElements": {"ignoreBrackets": true},
  "disallowYodaConditions": true,
  "disallowNestedTernaries": true,
  "maximumLineLength": 80,
  // Params
  // FIXME: Uncomment when http://bit.ly/1Nrdw9s is fixed.
  // "disallowUnusedParams": true,
  "requireAlignedMultilineParams": 2,
  // Specific Requires/Disallows
  "disallowKeywords": ["with", "continue", "class"],
  "safeContextKeyword": ["self"],
  "disallowImplicitTypeConversion": ["numeric", "boolean", "binary", "string"],
  "disallowMultipleVarDecl": true
}
